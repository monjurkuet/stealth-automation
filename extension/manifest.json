{
  "name": "Stealth Automation",
  "version": "1.0",
  "manifest_version": 3,
  "description": "Stealth automation using Native Messaging",
  "permissions": [
    "nativeMessaging",
    "tabs",
    "scripting",
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}
